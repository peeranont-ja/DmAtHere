<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical"
    tools:context=".ui.sideEffect.SideEffectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วิดีโอสาธิตวิธีการฉีดยาอินซูลินโดยใช้กระบอกฉีดยา"
            android:textSize="@dimen/text_size_smaller4"
            android:textStyle="bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.androidyoutubeplayer.player.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="ขอขอบคุณวิดีโอจาก โรงพยาบาลศิครินทร์"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_smaller4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="4dp"
            android:text="วิธีการฉีดยาอินซูลินโดยใช้กระบอกฉีดยา"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_smaller2"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ล้างมือด้วยสบู่และน้ำให้สะอาด แล้วเช็ดมือให้แห้ง"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="คลึงขวดยาอินซูลินเบาๆ บนฝ่ามือทั้งสองข้าง เพื่อให้ตัวยาผสมเข้ากันและมีอุณหภูมิใกล้เคียงกับร่างกาย จะช่วยลดอาการปวด หลังจากการฉีดยา"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="เปิดฝาครอบจุกยางออก (ถ้ามี) เช็ดจุกยางด้วยสำลีชุบแอลกอฮอล์"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="นำกระบอกฉีดยาที่สะอาด ดูดอากาศเข้ามาในกระบอกฉีดยาให้มีปริมาตรเท่ากับขนาดอินซูลินที่ต้องการ"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="แทงเข็มฉีดยาลงไปในจุกยาง แล้วฉีดอากาศเข้าไปในขวดยา"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="คว่ำขวดยาที่มีเข็มปักค้างอยู่ลง ค่อยๆ ดูดอินซูลินเข้าไปในหลอดฉีดยาในขนาดที่ต้องการ"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ตรวจดูฟองอากาศ ถ้ามีให้ฉีดยากลับเข้าไปในขวดใหม่แล้วดูดยากลับเข้ามาอีกครั้งจนได้ขนาดที่ต้องการ"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ทำความสะอาดผิวหนังบริเวณที่ฉีดด้วยสำลีชุบแอลกอฮอลล์"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ใช้มือข้างหนึ่งดึงผิวหนังบริเวณที่จะฉีดยาให้สูงขึ้น มือข้างที่เหลือจับกระบอกฉีดยาคล้ายกับจับปากกา แล้วแทงเข็มผ่านผิวหนังอย่างรวดเร็ว โดยวางปลายเข็มเอียงทำมุม 45-90 องศากับผิวหนังบริเวณนั้น แล้วค่อยๆฉีดอินซูลินช้าๆโดยกดก้านสูบของกระบอกฉีดยาจนสุด"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ถอนเข็มออกและกดบริเวณที่ฉีดด้วยสำลีชุบแอลกอฮอล์"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11."
                android:textSize="@dimen/text_size_smaller2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:lineSpacingExtra="4dp"
                android:text="ใช้ฝาปิดหัวเข็ม ไม่ควรใช้แอลกอฮอล์เช็ดปลายเข็ม จากนั้นเก็บใส่กล่องที่สะอาด"
                android:textSize="@dimen/text_size_smaller2" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="4dp"
            android:text="หมายเหตุ"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_smaller2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ล้างมือด้วยสบู่และน้ำให้สะอาด แล้วเช็ดมือให้แห้ง"
            android:textSize="@dimen/text_size_smaller3" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ไม่ควรฉีดยาในตำแหน่งเดิมบ่อยๆ ควรเปลี่ยนตำแหน่งฉีดยาให้ห่างจากการฉีดครั้งก่อนประมาณ 1 นิ้ว"
            android:textSize="@dimen/text_size_smaller3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ไม่ควรคลึงหรือนวดบริเวณที่ฉีดยาหลังฉีดยาเสร็จแล้ว"
            android:textSize="@dimen/text_size_smaller3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ไม่ควรใช้เข็มฉีดยาร่วมกับผู้อื่น"
            android:textSize="@dimen/text_size_smaller3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ไม่ควรใช้แอลกอฮอล์เช็ดปลายเข็มเนื่องจากจะทำให้เจ็บขณะฉีดยา"
            android:textSize="@dimen/text_size_smaller3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ยาฉีดอินซูลินที่เปิดแล้วมีอายุ 28 วัน"
            android:textSize="@dimen/text_size_smaller3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="-   ควรเก็บยาอินซูลินในตู้เย็นที่อุณหภูมิ 2-8 องศาเซลเซียส ตามตำแหน่ง 3"
            android:textSize="@dimen/text_size_smaller3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_how_to_9" />

    </LinearLayout>
</ScrollView>
